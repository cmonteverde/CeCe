modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["bash", "cairo", "curl", "ffmpeg-full", "freetype", "gdal", "geos", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "hdf5", "jq", "libjpeg", "libxcrypt", "netcdf", "pkg-config", "qhull", "tcl", "tk", "xsimd", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Climate Copilot Server"

[[workflows.workflow]]
name = "Climate Copilot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
